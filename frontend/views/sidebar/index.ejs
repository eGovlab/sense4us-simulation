<!DOCTYPE html>
<html style="width: 100%; height: 100%; padding: 0; margin: 0;">
    <head>
        <title>
            Sidebar
        </title>

        <script src="/static/js/doc-ready.js"></script>
        <script src="/static/js/sidebar.js"></script>
    </head>
    <body style="width: 100%; height: 100%; padding: 0; margin: 0;">
        <div id="sidebar" style="height: 100%; width: 100%"></div>
    </body>
    <script>
        docReady(function() {
            var sidebar = new window.sense4us.Sidebar();
            console.dir(sidebar);

                var menu = new window.sense4us.Menu();
                menu.setHeader("Modelling");

                sidebar.addMenu(menu);

                var input = new window.sense4us.Input();
                input.setLabel("Hello");

                menu.child.addItem(input);
            

            sidebar.appendTo(document.getElementById("sidebar"));
        });
    </script>
</html>